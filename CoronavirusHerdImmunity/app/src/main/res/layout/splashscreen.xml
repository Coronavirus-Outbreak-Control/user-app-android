<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white">

    <ImageView
        android:id="@+id/logo_id"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/connections" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logo_id"
        android:layout_alignEnd="@+id/logo_id"
        android:layout_alignLeft="@+id/logo_id"
        android:layout_alignTop="@+id/logo_id"
        android:layout_alignRight="@+id/logo_id"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="@string/splashscreen_title"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/logo_id"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logo_id"
        android:layout_alignEnd="@+id/logo_id"
        android:layout_alignLeft="@+id/logo_id"
        android:layout_alignTop="@+id/logo_id"
        android:layout_alignRight="@+id/logo_id"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:text="@string/splashscreen_subtitle"
        android:textSize="17sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/logo_id"/>

</RelativeLayout>