<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Primary Button style -->
    <style name="button_primary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
        <item name="android:background">@drawable/rectangle_2</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize"> 14sp </item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="underbutton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/button_under_margin_bottom</item>
        <item name="android:padding">0dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize"> 12sp </item>
        <item name="android:textColor"> @color/colorTextDark </item>
    </style>
    <!-- ///////////////////////////////////////////////////////// -->

    <!-- Splash Screen -->
    <style name="splashscreen_title">
        <item name="android:textSize"> 42sp </item>
        <item name="android:textColor"> @color/colorTextDark </item>
    </style>

    <style name="splashscreen_subtitle">
        <item name="android:textSize"> 20sp </item>
        <item name="android:textColor"> @color/colorText </item>
    </style>
    <!-- ///////////////////////////////////////////////////////// -->



    <!-- Intro Screens -->
    <style name="steps_text">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">64dp</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="intro_title">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize"> 42sp </item>
        <item name="android:textColor"> @color/colorTextDark </item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="intro_subtitle">
        <item name="android:layout_width">@dimen/layout_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:layout_marginTop">@dimen/margin_left</item>
        <item name="android:gravity">top</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize"> 20sp </item>
        <item name="android:textColor"> @color/colorText </item>
    </style>

    <!-- ///////////////////////////////////////////////////////// -->

    <style name="background_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/layout_width</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="status_title">
        <item name="android:layout_width">147dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="status_value">
        <item name="android:layout_width">147dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
